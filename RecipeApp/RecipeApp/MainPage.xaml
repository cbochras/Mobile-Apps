<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ReciepeApp"
             x:Class="ReciepeApp.MainPage">

    <StackLayout>
        
        <Picker ItemsSource="{Binding Types}" SelectedItem="{Binding MealType}" TextColor="Silver"/>

        <Entry Text="{Binding KeyOne}" TextColor="Silver" Placeholder="Type ingridient one" PlaceholderColor="Silver" />

        <Entry Text="{Binding KeyTwo}" TextColor="Silver" Placeholder="Type ingridient two" PlaceholderColor="Silver" />

        <Entry Text="{Binding KeyThree}" TextColor="Silver" Placeholder="Type ingridient three" PlaceholderColor="Silver" />

        <Button Text="Search" TextColor="White" Clicked="OnLoginClicked" BackgroundColor="#f50057" HeightRequest="50"></Button>

    </StackLayout>

</ContentPage>
